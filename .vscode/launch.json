{
  "configurations": [
  {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "file": "${workspaceFolder}/index.html",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
  },
  {
      "name": "Launch Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "cleanUp": "onlyTab",
      "file": "${workspaceFolder}/index.html",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
  }
  ]
}
